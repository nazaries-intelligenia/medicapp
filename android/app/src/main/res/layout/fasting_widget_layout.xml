<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fasting_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/fasting_widget_background">

    <!-- Clickable background layer (covers entire widget) -->
    <TextView
        android:id="@+id/fasting_widget_clickable_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/fasting_widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fasting"
            android:contentDescription="Ayuno" />

        <TextView
            android:id="@+id/fasting_widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/fasting_widget_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/fasting_widget_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="#B0FFFFFF" />

    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:id="@+id/fasting_widget_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fasting_widget_header"
        android:background="#4DFF9800" />

    <!-- List of fasting countdowns -->
    <ListView
        android:id="@+id/fasting_widget_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fasting_widget_divider"
        android:layout_marginTop="4dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/fasting_widget_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fasting_widget_divider"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/fasting_widget_empty"
        android:textSize="12sp"
        android:textColor="#80FFFFFF"
        android:visibility="gone" />

</RelativeLayout>
