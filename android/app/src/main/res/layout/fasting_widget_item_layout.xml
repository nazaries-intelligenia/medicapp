<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fasting_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="6dp"
    android:paddingHorizontal="4dp">

    <!-- Fasting status icon -->
    <ImageView
        android:id="@+id/fasting_item_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_fasting_active"
        android:contentDescription="Estado ayuno" />

    <!-- Medication info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <!-- Medication name -->
        <TextView
            android:id="@+id/fasting_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicamento"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Fasting type -->
        <TextView
            android:id="@+id/fasting_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayuno completo"
            android:textSize="10sp"
            android:textColor="#80FFFFFF"
            android:ellipsize="end"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Countdown timer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/fasting_item_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:30:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/fasting_item_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hasta 08:00"
            android:textSize="10sp"
            android:textColor="#80FFFFFF" />

    </LinearLayout>

</LinearLayout>
